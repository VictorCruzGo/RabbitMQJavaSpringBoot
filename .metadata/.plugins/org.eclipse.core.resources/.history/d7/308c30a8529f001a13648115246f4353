import java.util.stream.Stream;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;

public class Examen {
		
	private static final Logger log = LoggerFactory.getLogger(Examen.class);

	
	public static void main(String args[]) {
		
		//System.out.println(ejercicio1());
		log.info("imprimiendo mensaje de entrada");
		System.out.println(ejercicio2());
		log.info("imprimiendo mensaje de salida");
	}
	
	public int ejercicio1() {
		int V[] ={2,3,4,3,2,1};		
		int numero=3;
		int nv=0;
		
		for (int i = 0; i < V.length; i++) {
			if(V[i]==numero) {
				nv=nv+1;
			}	
		}
		
		return nv;
	}
	
	public static int ejercicio2() {
		int V[] ={2,3,4,3,2,1};		
		int numero=3;
		int nv=0;
		
		Stream.of(V).forEach(valor->{
			System.out.println(valor[1]);
		});
			
		
		return nv;
	}
}
